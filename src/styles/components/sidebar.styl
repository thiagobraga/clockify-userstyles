.cl-layout-aside
  background-color $background
  @media (min-width 992px)
    border-left 0

.cl-navbar
  background-color transparent

.cl-offcanvas-collapse
  background-color $background

.cl-navbar-light .cl-navbar-nav .cl-nav-link
  color $white

.cl-nav-icon-wrapper img:not(.cl-avatar-image)
  filter brightness(1.75)

@media (min-width 992px)
  .cl-sidebar-container .cl-nav-item:before
    background-color rgba(255,255,255,0.05)
    transition none

.cl-navbar-light .cl-navbar-nav .cl-nav-link
  &, &:focus, &:hover
    color $white

.cl-sidebar-container .cl-nav-item.cl-active .cl-nav-link
  background-color rgba(255,255,255,0.15)
  color $white

.cl-sidebar-header .cl-nav-link > img
  filter brightness(1.5)

.cl-collapse-nav-button
  background-color $background
